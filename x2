    <script>
        // Theme Toggle
        const themeToggle = document.querySelector('.theme-toggle');
        themeToggle.addEventListener('click', function() {
            document.body.classList.toggle('light-mode');
            const isLightMode = document.body.classList.contains('light-mode');
            themeToggle.querySelector('span').textContent = isLightMode ? 'Dark' : 'Light';
            
            // Save preference to localStorage
            localStorage.setItem('theme', isLightMode ? 'light' : 'dark');
        });
        
        // Check for saved theme preference
        if (localStorage.getItem('theme') === 'light') {
            document.body.classList.add('light-mode');
            themeToggle.querySelector('span').textContent = 'Dark';
        }
        
        // Enable/disable post button based on input
        const postTextarea = document.querySelector('.create-post textarea');
        const postSubmit = document.querySelector('.create-post .post-submit');
        
        postTextarea.addEventListener('input', function() {
            if (this.value.trim().length > 0) {
                postSubmit.classList.add('active');
            } else {
                postSubmit.classList.remove('active');
            }
        });
        
        // Enable/disable comment buttons
        const commentInputs = document.querySelectorAll('.comment-input');
        const commentPosts = document.querySelectorAll('.comment-post');
        
        commentInputs.forEach((input, index) => {
            input.addEventListener('input', function() {
                if (this.value.trim().length > 0) {
                    commentPosts[index].classList.add('active');
                } else {
                    commentPosts[index].classList.remove('active');
                }
            });
        });
        
        // Like button functionality
        const likeButtons = document.querySelectorAll('.post-action.like');
        likeButtons.forEach(button => {
            button.addEventListener('click', function() {
                this.classList.toggle('liked');
                const likeCount = this.closest('.post-card').querySelector('.post-likes');
                let count = parseInt(likeCount.textContent.replace(/\D/g, ''));
                
                if (this.classList.contains('liked')) {
                    count++;
                } else {
                    count--;
                }
                
                likeCount.textContent = count.toLocaleString() + ' likes';
            });
        });
        
        // Follow button functionality
        const followButtons = document.querySelectorAll('.follow-btn');
        followButtons.forEach(button => {
            button.addEventListener('click', function() {
                if (this.textContent === 'Follow') {
                    this.textContent = 'Following';
                    this.style.backgroundColor = 'transparent';
                    this.style.color = 'white';
                    this.style.border = '1px solid var(--border-color)';
                } else {
                    this.textContent = 'Follow';
                    this.style.backgroundColor = 'white';
                    this.style.color = 'black';
                    this.style.border = 'none';
                }
            });
        });
        
        // Create Room Modal
        const createBtn = document.querySelector('.create-btn');
        const createRoomModal = document.getElementById('createRoomModal');
        const closeModal = document.querySelector('.close-modal');
        const modalSecondaryBtn = document.querySelector('.modal-btn.secondary');
        
        createBtn.addEventListener('click', function() {
            createRoomModal.style.display = 'flex';
        });
        
        closeModal.addEventListener('click', function() {
            createRoomModal.style.display = 'none';
        });
        
        modalSecondaryBtn.addEventListener('click', function() {
            createRoomModal.style.display = 'none';
        });
        
        // Click outside modal to close
        window.addEventListener('click', function(event) {
            if (event.target === createRoomModal) {
                createRoomModal.style.display = 'none';
            }
        });
        
        // Join Room buttons
        const joinButtons = document.querySelectorAll('.join-button');
        joinButtons.forEach(button => {
            button.addEventListener('click', function() {
                alert('Joining audio room: ' + this.closest('.room-item').querySelector('.room-title').textContent);
            });
        });
        
        // Video play buttons
        const videoPlayButtons = document.querySelectorAll('.video-play-button');
        videoPlayButtons.forEach(button => {
            button.addEventListener('click', function() {
                alert('Playing video: ' + this.closest('.post-card').querySelector('.post-name').textContent);
            });
        });
    </script>
</body>
</html>
